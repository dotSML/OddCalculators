@page
@model OddCalculators.Pages.Errors.NotFoundModel
@{
    ViewData["Title"] = "NotFound";
}


<div class="container">
    <img style="float: left; padding-top: 75px;" src="~/images/404.png" />
    <h1 style="padding-top: 100px; font-size: 70px" id="response">404...</h1>
    <button type="button" class="btn btn-dark" onclick="terryMode()" id="terryButton">Terry Mode</button>
    
    
    <script>
        var state = 0;
        function terryMode() {
            
            if (state == 0) {
                document.body.style.background = "black";
                document.getElementById("response").style.color = "white";
                document.getElementById("terryButton").innerHTML = "Regular Mode";
                alert("Suprise mothafucka!");
                state = 1;
            } else {
                document.body.style.background = "white";
                document.getElementById("response").style.color = "black";
                document.getElementById("terryButton").innerHTML = "Terry Mode";
                state = 0;
            }
        }
    </script>

    <script src="~/lib/js/jquery.js"></script>
</div>


