@page
@using Services
@model OddCalculators.Pages.CreateModel
@inject OddCalculators.Services.IGlobalizationService global


@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
  


<div class="container">
    <div class="form-group">
        <form method="post">
            <label for="name">Name</label>
            <div class="form-group">
                <input asp-for="Customer.Name" placeholder="Enter Name" class="form-control"/>
            </div> 
            <label for="CountryList">Country</label>
            @Html.DropDownListFor(m => m.Customer.Country, new SelectList(global.PopulateCountriesDropdown()),"Choose Your Country" ,new { @class="form-control", id = "Country"}) <br />
        <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
        
</div>
