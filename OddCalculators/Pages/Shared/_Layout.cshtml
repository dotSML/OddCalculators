@using Services
@inject IWeatherService weatherService
<!DOCTYPE html>
    <link rel="stylesheet" href="~/lib/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>


<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/index">OddCalculators</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/index">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/create">CreateTest</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/cars">Cars</a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item" style="float: right; right:0px">
                @foreach (var weather in weatherService.ReadWeather())
                {
                    @weather.Name<span>,</span>
                    @weather.Temperature <span>°C</span>
                }
            </li>
        </ul>

        
    </div>
</nav> 
<div class="container">
    @RenderBody()
</div>
<footer>
    @RenderSection("footer", required: false)
</footer>
<script src="~/lib/js/jquery.js"></script>
<script src="~/lib/js/bootstrap.bundle.js"></script>
<script src="~/lib/js/jquery.min.js"></script>
<script src="~/lib/js/bootstrap.bundle.min.js"></script>
<script src="lib/popper.js/dist/umd/popper.js"></script>

</body>
</html>
